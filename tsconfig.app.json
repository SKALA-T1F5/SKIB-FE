{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    // --- JavaScript 변환을 위한 새로운 설정 ---
    "target": "es2020",
    "module": "esnext",
    "outDir": "../SKIB-FE-JS-output",
    "declaration": false,
    "noEmitOnError": false,
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    // --- TS1484 오류 해결을 위해 verbatimModuleSyntax 비활성화 ---
    "verbatimModuleSyntax": false
  }
}